{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    
  },
  "include": [
    "src",
    "report.ts",
    "src/types/**/*.d.ts"
  ]
}
